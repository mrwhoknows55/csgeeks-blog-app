<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDark3">

<!--    TODO change styles-->
    <EditText
        android:id="@+id/etArticleTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorBackgroundDark2"
        android:ems="10"
        android:hint="Title of the article"
        android:inputType="textPersonName"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:textColor="@color/colorTextPrimary"
        android:textColorHint="@color/colorNordBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etArticleAuthorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorBackgroundDark2"
        android:ems="10"
        android:hint="Author name"
        android:inputType="textPersonName"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:textColor="@color/colorTextPrimary"
        android:textColorHint="@color/colorNordBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etArticleTitle" />

    <EditText
        android:id="@+id/etArticleThumbnailLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorBackgroundDark2"
        android:ems="10"
        android:hint="Thumbnail image link"
        android:inputType="textUri"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:textColor="@color/colorTextPrimary"
        android:textColorHint="@color/colorNordBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etArticleAuthorName" />

    <EditText
        android:id="@+id/etArticleTags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorBackgroundDark2"
        android:ems="10"
        android:hint="Tags (seperated by comma)"
        android:inputType="textPersonName"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:textColor="@color/colorTextPrimary"
        android:textColorHint="@color/colorNordBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etArticleThumbnailLink" />

    <EditText
        android:id="@+id/etArticleDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorBackgroundDark2"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:textColor="@color/colorTextPrimary"
        android:textColorHint="@color/colorNordBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etArticleTags" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btEnterBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorNordBlue"
        android:text="Enter Article Body"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>