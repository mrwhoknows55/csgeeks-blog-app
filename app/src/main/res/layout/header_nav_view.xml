<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/colorNordGreen">

    <TextView
        android:id="@+id/tvNavHeader"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:text="@string/app_name_splash"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder_horizontal" />

    <ImageView
        android:id="@+id/ivHeaderAuthorProfile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:contentDescription="@string/author_image_desc"
        android:cropToPadding="false"
        android:fadingEdge="horizontal"
        android:outlineProvider="none"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvHeaderAuthorName"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_add"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvHeaderAuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:maxEms="5"
        android:maxLines="1"
        android:textColor="@color/colorTextPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivHeaderAuthorProfile"
        app:layout_constraintStart_toStartOf="@+id/ivHeaderAuthorProfile"
        tools:text="Author" />

</androidx.constraintlayout.widget.ConstraintLayout>